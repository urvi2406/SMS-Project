@model StudentManagementSystem.Models.Exam

@section Styles {
    <link rel="stylesheet" href="~/css/exam-details.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Exam Details";
}
<div class="exam-details-wrapper">

    <!-- Header -->
    <div class="exam-header">
        <h2>@Model.ExamName</h2>
        <span class="badge">@Model.Course.CourseName</span>
    </div>

    <!-- Info Cards -->
    <div class="exam-info-grid">

        <div class="info-card">
            <h6>Semester</h6>
            <p>Semester @Model.Semester</p>
        </div>

        <div class="info-card">
            <h6>Exam Date</h6>
            <p>@Model.ExamDate.ToString("dd MMM yyyy")</p>
        </div>

        <div class="info-card">
            <h6>Max Marks</h6>
            <p>@Model.MaxMarks</p>
        </div>

        <div class="info-card">
            <h6>Min Marks</h6>
            <p>@Model.MinMarks</p>
        </div>

        <div class="info-card">
            <h6>Status</h6>
            <p class="status @(Model.IsPublished ? "published" : "draft")">
                @(Model.IsPublished ? "Published" : "Draft")
            </p>
        </div>

    </div>

    <!-- Action Buttons -->
    <div class="exam-actions">

        <a asp-action="Index" class="btn-outline">← Back</a>

        @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.ExamId" class="btn-primary">
                Edit Exam
            </a>
        }

        @if (User.IsInRole("Student") && Model.IsPublished)
        {
            <span class="student-note">
                📌 Exam details are published. Please prepare accordingly.
            </span>
        }
    </div>

</div>
