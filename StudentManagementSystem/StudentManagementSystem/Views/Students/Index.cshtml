@model List<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}
<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Students</h3>
        <a asp-action="Details" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Manage Students
        </a>
    </div>

    <!-- Cards -->
    <div class="row g-4">

        @if (Model != null && Model.Any())
        {
            foreach (var student in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0 student-card">

                        <!-- Photo -->
                        <div class="text-center pt-4">
                            @if (!string.IsNullOrEmpty(student.Photo))
                            {
                                <img src="@Url.Content(student.Photo)"
                                     class="rounded-circle mb-2"
                                     style="width:80px;height:80px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width:90px;height:90px;">
                                    <i class="bi bi-person fs-1 text-secondary"></i>
                                </div>
                            }
                        </div>

                        <!-- Body -->
                        <div class="card-body text-center">
                            <h5 class="fw-bold mb-1">
                                @student.User?.FullName
                            </h5>

                            <p class="text-muted small mb-2">
                                @student.User?.Email
                            </p>

                            <span class="badge bg-info mb-3">
                                @student.Course?.CourseName
                            </span>

                            <div class="small text-muted">
                                <div>Enrollment: <strong>@student.EnrollmentNo</strong></div>
                                <div>Semester: <strong>@student.Semester</strong></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No students found.
                </div>
            </div>
        }

    </div>
</div>
