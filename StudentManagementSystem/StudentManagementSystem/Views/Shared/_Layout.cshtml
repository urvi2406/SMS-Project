@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-dark px-4 fixed-top">
        <span class="navbar-brand mb-0 h5">Student Management System</span>
        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">
            Logout
        </a>
    </nav>

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <ul class="nav flex-column nav-pills p-3 gap-1">

            <li class="nav-item">
                <a class="nav-link @(currentController == "Home" ? "active" : "")"
                   asp-controller="Home" asp-action="Index">
                    Dashboard
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "Students" ? "active" : "")"
                   asp-controller="Students" asp-action="Index">
                    Students
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "Teachers" ? "active" : "")"
                   asp-controller="Teachers" asp-action="Index">
                    Teachers
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "Courses" ? "active" : "")"
                   asp-controller="Courses" asp-action="Index">
                    Courses
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "Exams" ? "active" : "")"
                   asp-controller="Exams" asp-action="Index">
                    Exams
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "Results" ? "active" : "")"
                   asp-controller="Results" asp-action="Index">
                    Results
                </a>
            </li>

        </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
