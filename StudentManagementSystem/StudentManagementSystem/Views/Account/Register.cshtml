@{
    ViewData["Title"] = "Student Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EduTrack - Student Registration</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Auth CSS -->
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<body class="auth-bg d-flex align-items-center justify-content-center">

    <div class="auth-card">

        <!-- HEADER -->
        <div class="auth-header text-center">
            <div class="auth-icon">
                <i class="bi bi-person-plus"></i>
            </div>
            <h2>Create Account</h2>
            <p>Student Registration</p>
        </div>

        <!-- FORM -->
        <div class="auth-body">
            <form>

                <!-- Full Name -->
                <div class="mb-4">
                    <label class="form-label">Full Name</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-person"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Enter full name" />
                    </div>
                </div>

                <!-- Email -->
                <div class="mb-4">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input type="email" class="form-control" placeholder="example@gmail.com" />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input type="password" class="form-control" placeholder="Enter password" />
                    </div>
                </div>

                <!-- Role -->
                <div class="mb-4">
                    <label class="form-label">Role</label>
                    <input type="text" class="form-control bg-light" value="Student" readonly />
                </div>

                <!-- Button -->
                <button type="submit" class="btn auth-btn w-100">
                    Create Account
                </button>

                <!-- Login -->
                <div class="text-center mt-4">
                    <span>Already have an account?</span>
                    <a asp-action="Login" class="auth-link"> Login</a>
                </div>

            </form>
        </div>
    </div>

    <!-- Footer -->
    <div class="auth-footer">
        © 2026 EduTrack Student Management System
    </div>

</body>
</html>
